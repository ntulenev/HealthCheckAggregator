{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "app.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level}] ({Application}/{MachineName}/{ThreadId}) {SourceContext:l} {Scope} {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Scope} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ReportSenderConfiguration": {
    "Url": "https://example.com/report",
    "Timeout": "00:05:00" // 5 minutes
  },
  "HealthChecksStateConfiguration": {
    "Resources": [
      {
        "Name": "Resource1",
        "ExpirationPeriod": "01:00:00", // 1 hour
        "Uri": "https://resource1.example.com",
        "CheckInterval": "00:10:00", // 10 minutes
        "Timeout": "00:01:00" // 1 minute
      },
      {
        "Name": "Resource2",
        "ExpirationPeriod": "00:30:00", // 30 minutes
        "Uri": "https://resource2.example.com",
        "CheckInterval": "00:05:00", // 5 minutes
        "Timeout": "00:01:00" // 1 minute
      }
      // Add more resources as needed
    ]
  },
  "ReportProcessorConfiguration": {
    "SendInterval": "00:15:00" // 15 minutes
  }
}
